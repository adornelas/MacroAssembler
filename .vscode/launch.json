{
  "configurations": [
    {
      "name": "C/C++: g++ build and debug project",
      "type": "cppdbg",
      "request": "launch",
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "osx": {
        "MIMode": "lldb"
      },
      "windows": {
        "MIMode": "gdb",
        "miDebuggerPath": "C:\\TDM-GCC-32\\gdb32\\bin\\gdb32.exe"
      },
      "program": "${workspaceFolder}/montador",
      "args": ["teste"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build project"
    }
  ],
  "version": "2.0.0"
}
